  tool_path { name: "strip" path: "raspi-toolchain/arm-linux-gnueabihf-strip" }

  compiler_flag: "--sysroot=external/raspi-toolchain/arm-linux-gnueabihf/sysroot"
  compiler_flag: "-mfloat-abi=hard"

  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/include"
  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/arm-linux-gnueabihf/include"
  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/arm-linux-gnueabihf/include/c++/4.9.3"
  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/arm-linux-gnueabihf/sysroot/usr/include"
  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/lib/gcc/arm-linux-gnueabihf/4.9.3/include"
  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/arm-linux-gnueabihf/include/c++/4.9.3/arm-linux-gnueabihf"
  compiler_flag: "-isystem"
  compiler_flag: "external/raspi-toolchain/lib/gcc/arm-linux-gnueabihf/4.9.3/include-fixed"

  cxx_flag: "-isystem"
  cxx_flag: "external/raspi-toolchain/include"
  cxx_flag: "-isystem"
  cxx_flag: "external/raspi-toolchain/arm-linux-gnueabihf/include"
  cxx_flag: "-isystem"
  cxx_flag: "external/raspi-toolchain/arm-linux-gnueabihf/sysroot/usr/include"
  cxx_flag: "-isystem"
  cxx_flag: "external/raspi-toolchain/lib/gcc/arm-linux-gnueabihf/4.9.3/include"

  cxx_builtin_include_directory: "%package(@raspi-toolchain//arm-linux-gnueabihf/include)%"
  cxx_builtin_include_directory: "%package(@raspi-toolchain//arm-linux-gnueabihf/include)%/c++/4.9.3"
  cxx_builtin_include_directory: "%package(@raspi-toolchain//include)%"

  compiler_flag: "-DUAS_AT_UCLA_DEPLOYMENT"
  cxx_flag: "-std=c++11"
  linker_flag: "-lstdc++"

  # Link to all of the shared libraries.
  linker_flag: "--sysroot=external/raspi-toolchain/arm-linux-gnueabihf/sysroot"
  linker_flag: "-Lexternal/raspi-toolchain/lib"
  linker_flag: "-Lexternal/raspi-toolchain/arm-linux-gnueabihf/lib"
  linker_flag: "-Lexternal/raspi-toolchain/arm-linux-gnueabihf/sysroot/lib"
  linker_flag: "-Lexternal/raspi-toolchain/arm-linux-gnueabihf/sysroot/usr/lib"
  linker_flag: "-Bexternal/raspi-toolchain/bin"

  feature {
    name: "opt"
    implies: "all_modes"
    flag_set {
      action: "preprocess-assemble"
      action: "c-compile"
      action: "c++-compile"
      action: "c++-header-parsing"
      action: "c++-header-preprocessing"
      action: "c++-module-compile"
